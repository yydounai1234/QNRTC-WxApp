.screen-model {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  background: rgba(0, 0, 0, 0.5);
}

.screen-model-wrap {
  position: absolute;
  top: 45vh;
  height: 10vh;
  width: 80vw;
  left: 10vw;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
}

.screen-model-inner {
  width: 100%;
}

.track-info {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.screen-guest {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.screen-broadcaster-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.screen-broadcaster {
  width: 150rpx;
  margin-bottom: 40rpx;
  font-size: 40rpx;
}

.guest-item {
  width: 22%;
  margin-right: 4%;
  margin-bottom: 30rpx;
}

.guest-item:nth-child(4n) {
  margin-right: 0;
}

.footer {
  padding-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mix-sound-img {
  width: 80rpx;
  height: 80rpx;
}

.audio-reveb-wrapper {
  display: flex;
  align-items: center;
}

.audio-reveb {
  margin-right: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.base-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.base-left {
  display: flex;
  align-items: center;
}
