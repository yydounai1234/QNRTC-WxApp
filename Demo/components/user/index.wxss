.screen-icon-pos {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 2;
  bottom: 15rpx;
}

.user-joined {
  width: 100%;
  padding-bottom: 100%;
  border-radius: 5%;
  background-color: #34AADC;
  position: relative;
}

.user-info {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff;
  overflow: hidden;
}

.user-text {
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  margin-bottom: 10rpx;
  font-size: 25rpx;
}

